# Application Configuration
SECRET_KEY=dev-secret-CHANGE-IN-PRODUCTION
BASE_URL=http://localhost:8000
DEBUG=True

# Database
# Note: The async driver (+aiosqlite) is automatically added by the application
# Local development (relative path)
DATABASE_URL=sqlite:///./data/battle_d.db

# Railway production (absolute path to volume mount)
# DATABASE_URL=sqlite:////data/battle_d.db

# Email Service
# Provider options: brevo, resend, gmail, console
# - brevo: Use Brevo (Sendinblue) API (RECOMMENDED for Railway - no domain required, 300 emails/day free)
# - resend: Use Resend API for production email sending (requires domain verification)
# - gmail: Use Gmail SMTP with App Password (blocked on Railway due to SMTP port restrictions)
# - console: Print emails to console (development mode)
EMAIL_PROVIDER=brevo

# Brevo Configuration (RECOMMENDED - only used when EMAIL_PROVIDER=brevo)
# Works on Railway without domain verification
# Free tier: 300 emails/day
# Setup guide: See DEPLOYMENT.md section "Step 1C: Setup Brevo"
# Get your API key: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=
BREVO_FROM_EMAIL=noreply@battle-d.com
BREVO_FROM_NAME=Battle-D

# Resend API Configuration (only used when EMAIL_PROVIDER=resend)
# Requires domain verification - not ideal for Railway deployment
RESEND_API_KEY=

# Gmail SMTP Configuration (only used when EMAIL_PROVIDER=gmail)
# WARNING: Gmail SMTP is blocked on Railway (SMTP ports 587/465 are restricted)
# Only use this for local development
# IMPORTANT: Use App Password, NOT your regular Gmail password
# How to get App Password: https://myaccount.google.com/apppasswords
GMAIL_EMAIL=
GMAIL_APP_PASSWORD=

# Session
# SESSION_COOKIE_NAME=battle_d_session
# SESSION_MAX_AGE_SECONDS=604800
