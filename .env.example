# Application Configuration
SECRET_KEY=dev-secret-CHANGE-IN-PRODUCTION
BASE_URL=http://localhost:8000
DEBUG=True

# Database
# Note: The async driver (+aiosqlite) is automatically added by the application
# Local development (relative path)
DATABASE_URL=sqlite:///./data/battle_d.db

# Railway production (absolute path to volume mount)
# DATABASE_URL=sqlite:////data/battle_d.db

# Email Service
# Provider options: resend, gmail, console
# - resend: Use Resend API for production email sending (requires domain)
# - gmail: Use Gmail SMTP with App Password (personal Gmail account, no domain needed)
# - console: Print emails to console (development mode)
EMAIL_PROVIDER=resend

# Resend API Configuration (only used when EMAIL_PROVIDER=resend)
# Leave RESEND_API_KEY empty for development (falls back to console provider)
RESEND_API_KEY=
FROM_EMAIL=noreply@battle-d.com

# Gmail SMTP Configuration (only used when EMAIL_PROVIDER=gmail)
# IMPORTANT: Use App Password, NOT your regular Gmail password
# Setup guide: See DEPLOYMENT.md section "Step 1B: Setup Gmail"
# How to get App Password: https://myaccount.google.com/apppasswords
GMAIL_EMAIL=
GMAIL_APP_PASSWORD=

# Session
# SESSION_COOKIE_NAME=battle_d_session
# SESSION_MAX_AGE_SECONDS=604800
